
<MudDrawer @bind-Open="SideBarOpen" Elevation="10">
    <MudDrawerHeader>
        <MudText Typo="Typo.h5" Color="Color.Default"  Style="margin-top:15px; margin-left:5px;">Thrift Boss</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudDivider DividerType="DividerType.Middle" Class="my-6" />
        <MudNavLink Href="/" Match="NavLinkMatch.All"></MudNavLink>
        <MudNavLink Href="/" Icon="@Icons.Filled.Home" Match="NavLinkMatch.Prefix">Home</MudNavLink>
        <MudNavLink Href="/products" Icon="@Icons.Filled.ShoppingBag" Match="NavLinkMatch.Prefix">Products</MudNavLink>
        <MudNavLink Href="/Blogs" Icon="@Icons.Filled.ReadMore" Match="NavLinkMatch.Prefix">Blogs</MudNavLink>
        <MudNavLink Href="/About" Icon="@Icons.Filled.AutoAwesome" Match="NavLinkMatch.Prefix">About</MudNavLink>
        <MudDivider DividerType="DividerType.Middle" Class="my-6" />
        <MudDivider DividerType="DividerType.FullWidth" Class="my-6" />
    </MudNavMenu>
</MudDrawer>

@code {
    [Parameter]
    public bool SideBarOpen { get; set; }
}