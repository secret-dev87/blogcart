        <MudDivider DividerType="DividerType.Middle" Class="my-6" />
        <MudNavGroup Title="Hello Admin" Expanded="false" Color="Color.Primary">
            <MudNavLink Href="https://localhost:7164/product" Icon="@Icons.Filled.Login" Match="NavLinkMatch.Prefix">Product LIst</MudNavLink>
            <MudNavLink Href="https://localhost:7164/Category" Icon="@Icons.Filled.ShoppingBag" Match="NavLinkMatch.Prefix">Category List</MudNavLink>
        </MudNavGroup>
        <MudDivider DividerType="DividerType.Middle" Class="my-6" />
        <MudNavGroup Title="C# Playground" Expanded="false" Color="Color.Primary">
            <MudNavLink Href="/ComponentPLayground" Icon="@Icons.Filled.CodeOff" Match="NavLinkMatch.Prefix">C# PlayGround</MudNavLink>
            <MudNavLink Href="/ComponentPLayground" Icon="@Icons.Filled.CodeOff" Match="NavLinkMatch.Prefix">C# PlayGround</MudNavLink>
        </MudNavGroup>
        <MudDivider DividerType="DividerType.Middle" Class="my-6" />
    </MudNavMenu>
</MudDrawer>

@code {
    [Parameter]
    public bool SideBarOpen { get; set; }
}