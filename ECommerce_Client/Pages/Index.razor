@page "/"

<PageTitle>LightningBits.net</PageTitle>
    <div class="py-24 px-6">
        @if (showTitle)
        {
            <div class="max-w-5xl mx-auto -mt-10 flex justify-center">
                <h1 class="font-display-italic font-extrabold text-5xl md:text-6xl italic leading-none max-w-xl animate__animated animate__slideInRight duration-500">LightningBits.net</h1>
            </div>
        }
        <img src="/img/lb_logoDark.png" class="mx-auto -mt-20 animate__animated animate__bounce animate__slow duration-4s ease-in-out">
        @if (showContent)
        {
            <div>
                <div class="px-2">
                    <div class="text-center p-4 animate__animated animate__slideInRight duration-500">
                        <h2 class="text-3xl font-medium">Empower Your Self-Sovereignty</h2>
                        <p>Welcome to our Ecommerce and Blog platform,</p>
                        <p>where individuals are empowered to take control of their own commerce and knowledge</p>
                    </div>
                    <div class="w-full mx-auto mt-5">
                        <a href="/ThriftBoss"  aria-label="A Fictional E-commerce store" class="w-1/2 bg-yellow-500 px-4 py-2 rounded-sm text-black hover:bg-yellow-600 mx-4  animate__animated animate__bounce animate__slow duration-2s ease-in-out animate__fadeIn animate__animation-delay-7s" >My Demo Shop</a>
                        <a href="/portfolio"  aria-label="My Portfolio" class="w-1/2 bg-yellow-500 px-4 py-2 rounded-sm text-black hover:bg-yellow-600 mx-4  animate__animated animate__bounce animate__slow duration-2s ease-in-out animate__fadeIn animate__animation-delay-7s">My Portfolio</a>
                    </div>
                    <div class="w-full mx-auto mt-10">
                        <a href="@($"{LocalHost}/Home")"  aria-label="Visit my Blog where i write about Tech" class="w-1/2  bg-yellow-500 px-4 py-2 rounded-sm text-black hover:bg-yellow-600 mx-4  animate__animated animate__bounce animate__slow duration-2s ease-in-out animate__fadeIn animate__animation-delay-7s">My Blog</a>
                        <a href="/portfolio"  aria-label="I am for hire" class="w-1/2 bg-yellow-500 px-4 py-2 rounded-sm text-black hover:bg-yellow-600 mx-4  animate__animated animate__bounce animate__slow duration-2s ease-in-out animate__fadeIn animate__animation-delay-7s">Hire Me</a>
                    </div>
                </div>
            </div>
        }
    </div>
@code {

    private string LocalHost = "https://myblog.lightningbits.net";
    private bool showContent = false;
    private bool showTitle = false;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(3000);
        showContent = true;
        showTitle = true;
    }
}
