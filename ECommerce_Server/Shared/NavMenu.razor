
<AuthorizeView Roles="@roleAdmin">
    <MudDrawer @bind-Open="SideBarOpen" Elevation="10">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Color="Color.Default" Style="margin-top:15px; margin-left:5px;">Thrift Boss</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudDivider DividerType="DividerType.Middle" Class="my-2" />
            <MudText Typo="Typo.body1" Color="Color.Primary">@context.User.Identity.Name</MudText>
            <MudNavGroup Title="Admin Settings" Expanded="false" Color="Color.Dark">
                <MudNavLink Href="/AdminPanel" Icon="@Icons.Filled.AdminPanelSettings" Match="NavLinkMatch.Prefix">Admin Panel</MudNavLink>
                <MudNavLink Href="/Identity/Account/Manage" Icon="@Icons.Filled.Settings" Match="NavLinkMatch.Prefix">Profile settings</MudNavLink>
            </MudNavGroup>
            <MudDivider DividerType="DividerType.Middle" Class="my-2" />
            <MudNavGroup Title="Return to Client" Expanded="false" Color="Color.Dark">
                <MudNavLink Href="@($"{LocalHost}")" Match="NavLinkMatch.All"></MudNavLink>
                <MudNavLink Href="@($"{LocalHost}")" Icon="@Icons.Filled.Home" Match="NavLinkMatch.Prefix">Home</MudNavLink>
                <MudNavLink Href="@($"{LocalHost}/Products")" Icon="@Icons.Filled.ShoppingBag" Match="NavLinkMatch.Prefix">Products</MudNavLink>
                <MudNavLink Href="@($"{LocalHost}/blogs")" Icon="@Icons.Filled.ReadMore" Match="NavLinkMatch.Prefix">Blogs</MudNavLink>
                <MudNavLink Href="@($"{LocalHost}/About")" Icon="@Icons.Filled.AutoAwesome" Match="NavLinkMatch.Prefix">About</MudNavLink>
            </MudNavGroup>
            <MudDivider DividerType="DividerType.Middle" Class="my-2" />
        </MudNavMenu>
    </MudDrawer>
</AuthorizeView>



@code {
    [Parameter]
    public bool SideBarOpen { get; set; }
    public string LocalHost = " https://e-commerceclient.azurewebsites.net";
    private string roleAdmin = SharedServices.Commons.SD.Role_Admin;
}